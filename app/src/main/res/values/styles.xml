<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--TabLayout字体大小样式-->
    <style name="TabLayoutNormalTextSizeStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/bigText</item>
        <item name="android:textColor">@color/text_gray3</item>
    </style>

    <style name="TabLayoutBigTextSizeStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/largeText</item>
        <item name="android:textColor">@color/text_gray3</item>
    </style>

</resources>
